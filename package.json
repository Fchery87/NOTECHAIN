{
  "name": "notechain",
  "version": "0.0.1",
  "private": true,
  "description": "Privacy-first, offline-first productivity suite with end-to-end encryption",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter @notechain/mobile dev",
    "build": "bun run build --filter 'apps/*'",
    "test": "bun run test --filter '@notechain/*'",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:push": "supabase db push",
    "supabase:generate": "supabase gen types typescript --project-id your-project-id > packages/data-models/src/supabase-types.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "supabase": "^1.100.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  }
}
